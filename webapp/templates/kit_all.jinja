<!DOCTYPE html>
<html>
<head>
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<link rel="stylesheet" href="style.css">
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
    body {
    margin: 0;
    font-family: Arial, Helvetica, sans-serif;
    }

    .topnav {
    overflow: hidden;
    background-color: #CBB677;
    }

    .topnav a {
    float: left;
    color: #f2f2f2;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
    font-size: 17px;
    }

    .topnav a:hover {
    background-color: #ddd;
    color: black;
    }

    .topnav a.active {
    background-color: #450084;
    color: white;
    }
    .styled_button {
    background-color: #450084; 
    border: none;
    color: white;
    padding: 15px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
  }
</style>
</head>
<body>

<div class="topnav">
  <a class="home" href="/">Home</a>
  <a href="/raceorganizer">Race Organizer</a>
  <a href="race_crew">Race Crew</a>
  <a href="/kit" class="active">Kits</a>
  <a href="/select_team_kits"> View Container Contents</a>
  <a href="#contact">Contact</a>
  <a href="#about">About</a>
  <a href="/test">Test</a>
</div>
    <h1>Kits</h1>

    {% for message in get_flashed_messages() %}
    <p><i>{{ message }}</i></p>
    {% endfor %}

    {% if data %}
    <div id="table_div"></div>
    <script type="text/javascript">
        google.charts.load('current', { 'packages': ['table'] });
        google.charts.setOnLoadCallback(drawTable);

        function drawTable() {
            var data = new google.visualization.DataTable();

            data.addColumn('string', 'KitID');
            data.addColumn('string', 'OwnerID');
            data.addColumn('string', 'TypeOfKit');
            data.addColumn('string', 'TeamID');
            data.addColumn('string', 'TotalWeight');
            data.addColumn('string', 'KitSize');
            
            data.addRows([
                {% for row in data %}
                [{% for value in row %}'{{ value }}', {% endfor %}],
                {% endfor %}
            ]);

            var table = new google.visualization.Table(document.getElementById('table_div'));
            table.draw(data, { showRowNumber: true, page: true, pageSize: 10 });

            google.visualization.events.addListener(table, "select", function() {
                let selection = table.getSelection();
                let item = selection[0];
                if (item) {
                    let id = data.getValue(item.row, 0);
                    window.location.href = 'kit/' + id;
                }
            });
        }
    </script>
    {% endif %}
    <p>
        <button onclick="window.location.href = 'kit/new'">Add Shipment</button>
    </p>
</body>
</html>