<!DOCTYPE html>
<html>
<head>
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<link rel="stylesheet" href="style.css">
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
    body {
    margin: 0;
    font-family: Arial, Helvetica, sans-serif;
    }

    .topnav {
    overflow: hidden;
    background-color: #CBB677;
    }

    .topnav a {
    float: left;
    color: #f2f2f2;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
    font-size: 17px;
    }

    .topnav a:hover {
    background-color: #ddd;
    color: black;
    }

    .topnav a.active {
    background-color: #450084;
    color: white;
    }

    #table_div {
        padding: 14px 16px;
    }

    .google-table-header {
    background-color: #450084; 
    color: white;
    font-size: 16px;
    font-weight: bold;
    text-align: center;
    padding: 30px;
}

/* Table Rows */
.google-table-row {
    color: #333; 
    font-size: 14px;
}

.google-table-odd-row {
    background-color: #f9f9f9; /* Light gray background */
}

.google-table-hover-row:hover {
    background-color: #f1f1f1; /* Highlight on hover */
}

/* Selected Row */
.google-table-selected-row {
    background-color: #D3E4CD; /* Light green */
    font-weight: bold;
}

/* Table Cells */
.google-table-cell {
    padding: 15px; 
    text-align: left;
}

/* Header Cells */
.google-table-header-cell {
    padding: 30px;
}
</style>
</head>
<body>

<div class="topnav">
  <a class="active" href="/">Home</a>
  <a href="/raceorganizer">Race Organizer</a>
  <a href="/race_crew">Shipment Manager</a>
  <a href="/team_manager">Team Manager</a>
  <a href="/kit">All Kits</a>
  <a href="/select_team_kits"> View Team Kits</a>
  <a href="/contact">Contact Us</a>
  <a href="/about">About</a>
  <a href="/test">Test</a>
</div>
    
    {% for message in get_flashed_messages() %}
    <p><i>{{ message }}</i></p>
    {% endfor %}

    <div style="padding-left:16px"></div>
        <h1>All Kits</h1>
    </div>

    {% if data %}
    <div id="table_div"></div>
    <script type="text/javascript">
        google.charts.load('current', { 'packages': ['table'] });
        google.charts.setOnLoadCallback(drawTable);

        function drawTable() {
            var data = new google.visualization.DataTable();

            data.addColumn('string', 'KitID');
            data.addColumn('string', 'OwnerID');
            data.addColumn('string', 'TypeOfKit');
            data.addColumn('string', 'TeamID');
            data.addColumn('string', 'TotalWeight');
            data.addColumn('string', 'KitSize');
            
            data.addRows([
                {% for row in data %}
                [{% for value in row %}'{{ value }}', {% endfor %}],
                {% endfor %}
            ]);
            
            
            var options = {
            showRowNumber: true,
            page: true,
            pageSize: 10,
            width: '100%', 
            height: '400px',
            cssClassNames: {
                headerRow: 'google-table-header',
                tableRow: 'google-table-row',
                oddTableRow: 'google-table-odd-row',
                selectedTableRow: 'google-table-selected-row',
                hoverTableRow: 'google-table-hover-row',
                headerCell: 'google-table-header-cell',
                tableCell: 'google-table-cell'
            }
            };


            var table = new google.visualization.Table(document.getElementById('table_div'));
            table.draw(data, options);
        }
    </script>
    {% endif %}
</body>
</html>