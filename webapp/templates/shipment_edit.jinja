<!DOCTYPE html>
<html>
<head>
    <title>{{ "Add" if key == "new" else "Edit" }} Shipment</title>
    <style>
        body {
        margin: 0;
        font-family: Arial, Helvetica, sans-serif;
        }

        .formblock{
            padding: 0px 16px;
        }

        .topnav {
        overflow: hidden;
        background-color: #CBB677;
        }

        .topnav a {
        float: left;
        color: #f2f2f2;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
        font-size: 17px;
        }

        .topnav a:hover {
        background-color: #ddd;
        color: black;
        }

        .topnav a.active {
        background-color: #450084;
        color: white;
        }

        #table_div {
            padding: 14px 16px;
        }
    </style>
</head>
<body>
<div class="topnav">
  <a href="/">Home</a>
  <a href="/raceorganizer">Race Organizer</a>
  <a href="/race_crew" class="active">Shipment Manager</a>
  <a href="/team_manager">Team Manager</a>
  <a href="/kit">All Kits</a>
  <a href="/select_team_kits"> View Team Kits</a>
  <a href="/contact">Contact Us</a>
  <a href="/about">About</a>
  <a href="/test">Test</a>
</div>
    <h1 style="padding-left:16px">{{ "Add" if key == "new" else "Edit" }} Shipment</h1>

    {% for message in get_flashed_messages() %}
    <p><i>{{ message }}</i></p>
    {% endfor %}

    <form class="formblock">
        <p>
            ShipmentID:<br>
            <input name="ID" type="text" value="{{ values[0] }}" readonly>
        </p>
        <p>
            RaceID:<br>
            <input name="State" type="text" value="{{ values[1] }}" readonly>
        </p>
        <p>
            CurrentLocation:<br>
            <input name="Title" type="text" value="{{ values[2] }}" readonly>
        </p>
        <p>
            Destination:<br>
            <input name="Advertisement" type="text" value="{{ values[3] }}" readonly>
        </p>
        <p>
            Method:<br>
            <input name="Description" type="text" value="{{ values[4] }}" readonly>
        </p>
        <p>
            CreatedBy:<br>
            <input name="Capacity" type="text" value="{{ values[5] }}" readonly>
        </p>
        <p>
            Status:<br>
            <input name="ComputerNeeds" type="text" value="{{ values[6] }}">
        </p>
       
        {% if key == "new" %}
        <p>
            <input name="action" type="submit" value="Insert" style="color: green;">
            <input name="action" type="submit" value="Cancel">
        </p>
        {% else %}
        <p>
            <input name="action" type="submit" value="Update" style="color: green;">
            <a href="/race_crew">Back</a>
        </p>
        {% endif %}
    </form>
</body>
</html>