<!DOCTYPE html>
<html>
<head>
    <title>Race Team Shipment Status</title>
    <script type="text/javascript" src="static/dropdowns.js"></script>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
</head>
<body>
    <h1>Race Team Shipments by Status</h1>

    {% for message in get_flashed_messages() %}
    <p><i>{{ message }}</i></p>
    {% endfor %}

    <form>
        <p>
            <label for="status">Select Status:</label>
            <select id="status" name="status">
                <option value="shipped" {% if status == "shipped" %}selected{% endif %}>Shipped</option>
                <option value="pending" {% if status == "pending" %}selected{% endif %}>Pending</option>
                <option value="delivered" {% if status == "delivered" %}selected{% endif %}>Delivered</option>
            </select>
            <input type="submit" value="Filter">
        </p>
    </form>

    <script>
        init_select("status", status_options, "{{ status }}");
    </script>

    {% if data %}
    <div id="table_div"></div>
    <div id="chart_div"></div>

    <script type="text/javascript">
        google.charts.load('current', { 'packages': ['table'] });
        google.charts.setOnLoadCallback(drawTable);

        function drawTable() {
            var data = new google.visualization.DataTable();

            data.addColumn('string', 'ID');
            data.addColumn('string', 'Team Name');
            data.addColumn('string', 'Status');
            data.addColumn('string', 'Shipment Date');

            data.addRows([
                {% for row in data %}
                ['{{ row[0] }}', '{{ row[1] }}', '{{ row[2] }}', '{{ row[3] }}'],
                {% endfor %}
            ]);

            var options = {
                showRowNumber: true,
                page: true,
                pageSize: 10,
            };

            var table = new google.visualization.Table(document.getElementById('table_div'));
            table.draw(data, options);
        }
    </script>

    <script type="text/javascript">
        google.charts.load('current', { packages: ['corechart', 'bar'] });
        google.charts.setOnLoadCallback(drawChart);

        function drawChart() {
            var data = new google.visualization.DataTable();
            data.addColumn('string', 'Status');
            data.addColumn('number', '# of Shipments');

            data.addRows([
                {% for status, count in stats.items() %}
                ['{{ status }}', {{ count }}],
                {% endfor %}
            ]);

            var options = {
                hAxis: {
                    title: 'Status',
                },
                vAxis: {
                    title: '# of Shipments',
                    format: '0',
                },
                legend: {
                    position: "none",
                },
                width: 600,
                height: 400,
            };

            var chart = new google.visualization.ColumnChart(document.getElementById('chart_div'));
            chart.draw(data, options);
        }
    </script>
    {% endif %}

</body>
</html>
