<!DOCTYPE html>
<html>
<head>
    <title>Race Team Shipment Status</title>
    <script type="text/javascript" src="static/dropdowns.js"></script>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
</head>
<body>
    <h1>Race Team Shipment Status</h1>

    {% for message in get_flashed_messages() %}
    <p><i>{{ message }}</i></p>
    {% endfor %}

    <form method="get">
        <p>
            <label for="status">Select Shipment Status:</label>
            <select id="status" name="status">
                <option value="In Transit" {% if status == 'In Transit' %}selected{% endif %}>In Transit</option>
                <option value="Arrived" {% if status == 'Arrived' %}selected{% endif %}>Arrived</option>
                <option value="Not Left" {% if status == 'Not Left' %}selected{% endif %}>Not Left</option>
            </select>
            <input type="submit" value="Filter">
        </p>
    </form>

    {% if data %}
    <div id="table_div"></div>
    <div id="chart_div"></div>

    <script type="text/javascript">
        google.charts.load('current', { 'packages': ['table'] });
        google.charts.setOnLoadCallback(drawTable);

        function drawTable() {
            var data = new google.visualization.DataTable();

            data.addColumn('string', 'Race ID');
            data.addColumn('string', 'Team Name');
            data.addColumn('number', 'Shipment ID');
            data.addColumn('string', 'Shipment Status');

            data.addRows([
                {% for row in data %}
                ['{{ row[0] }}', '{{ row[1] }}', {{ row[2] }}, '{{ row[3] }}'],
                {% endfor %}
            ]);

            var options = {
                showRowNumber: true,
                page: true,
                pageSize: 10,
            };

            var table = new google.visualization.Table(document.getElementById('table_div'));
            table.draw(data, options);
        }
    </script>

    <script type="text/javascript">
        google.charts.load('current', { packages: ['corechart', 'bar'] });
        google.charts.setOnLoadCallback(drawChart);

        function drawChart() {
            var data = new google.visualization.DataTable();
            data.addColumn('string', 'Shipment Status');
            data.addColumn('number', 'Count');

            data.addRows([
                {% for status, count in stats.items() %}
                ['{{ status }}', {{ count }}],
                {% endfor %}
            ]);

            var options = {
                hAxis: {
                    title: 'Shipment Status',
                },
                vAxis: {
                    title: 'Count',
                    format: '0',
                },
                legend: {
                    position: "none",
                },
                width: 600,
                height: 400,
            };

            var chart = new google.visualization.ColumnChart(document.getElementById('chart_div'));
            chart.draw(data, options);
        }
    </script>
    {% endif %}
</body>
</html>
